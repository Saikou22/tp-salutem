{% extends 'admin/base.html.twig' %}

{% block title %}Doctor index{% endblock %}

{% block body %}
    <h1>Doctor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Email</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.id }}</td>
                <td>{{ doctor.firstName }}</td>
                <td>{{ doctor.lastName }}</td>
                <td>
                    <img src="{{ asset(uploadsDirectory ~ doctor.photo) }}" class="img-fluid img-thumbnail" alt="{{ doctor.fullName }}">
                </td>
                <td>{{ doctor.description }}</td>
                <td>{{ doctor.email }}</td>
                <td>{{ doctor.phone }}</td>
                <td>
                    <a href="{{ path('app_admin_doctor_show', {'id': doctor.id}) }}">show</a>
                    <a href="{{ path('app_admin_doctor_edit', {'id': doctor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_doctor_new') }}">Create new</a>
{% endblock %}
